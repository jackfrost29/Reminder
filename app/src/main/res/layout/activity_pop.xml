<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.PopActivity"
    android:background="@drawable/pop_bg"
    android:id="@+id/pop_activity_id">

    <Button
        android:id="@+id/button_create_new_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Reminder"
        android:textSize="29dp"
        android:textColor="#FF0000"/>

    <Button
        android:id="@+id/button_create_new_note"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Note"
        android:textSize="29dp"
        android:textColor="#FF0000"/>

    <Button
        android:id="@+id/button_create_new_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New List Item"
        android:textSize="29dp"
        android:textColor="#FF0000"/>

</LinearLayout>