<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/row_note_view_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/row_note_view_date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07.03.2018 : Monday"
        android:textSize="23dp"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/row_note_view_text_id"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the quick brown fox jumps over the lazy dog and do what not"
        android:ellipsize="end"
        android:singleLine="false"
        android:maxLines="2"
        />

</LinearLayout>